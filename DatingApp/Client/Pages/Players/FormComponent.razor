@using DatingApp.Client.Components

<EditForm Model="@player" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class=" form-group">
            <label>First Name: </label>
            <div>
                <InputText @bind-Value=" player.FirstName" class="form-control" />
                <ValidationMessage For="@(() => player.FirstName)" />
            </div>
        </div>
        <div class=" form-group">
            <label>Last Name: </label>
            <div>
                <InputText @bind-Value=" player.LastName" class="form-control" />
                <ValidationMessage For="@(() => player.LastName)" />
            </div>
        </div>
        <div class=" form-group">
            <label>Address: </label>
            <div>
                <InputText @bind-Value=" player.Address" class="form-control" />
                <ValidationMessage For="@(() => player.Address)" />
            </div>
        </div>
        <div class=" form-group">
            <label>Contact Number : </label>
            <div>
                <InputText @bind-Value=" player.ContactNumber" class="form-control" />
                <ValidationMessage For="@(() => player.ContactNumber)" />
            </div>
        </div>
        <div class=" form-group">
            <label>Email Address : </label>
            <div>
                <InputText @bind-Value=" player.EmailAddress" class="form-control" />
                <ValidationMessage For="@(() => player.EmailAddress)" />
            </div>
        </div>
        <div class=" form-group">
            <label>Gender : </label>
            <div>
                <InputText @bind-Value=" player.Gender" class="form-control" />
                <ValidationMessage For="@(() => player.Gender)" />
            </div>
        </div>
    </fieldset>
    @if (!Disabled)
    {
        <button type="submit" class=" btn btn-success btn-block">@ButtonText</button>
    }
    <BackToList Target="players" />

</EditForm>
@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Player player { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
